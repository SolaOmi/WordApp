<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Style for a tab that displays a attribute name -->
    <style name="AttributeTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/AttributeTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="AttributeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <!-- Style for the major views in the activity_search.xml -->
    <style name="WhiteRoundedCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_margin">@dimen/white_rounded_card_margin</item>
    </style>

    <!-- Style for word-of-the-day TextView's -->
    <style name="WordOfTheDay">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/word_of_the_day_textview_margin</item>
    </style>

</resources>
